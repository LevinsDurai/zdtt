{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 2,

    "name": "message passing",
    "description": "background to content message passing example",
    "version": "0.0.0.1",
    "icons": {
        "16": "Tooltip_disble_icon.png",
        "48": "Tooltip_disble_icon.png",
        "128": "Tooltip_disble_icon.png"
    },

    "permissions": [
        "webNavigation",
        "cookies",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Message passing example..."
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "css": ["Tooltip1.css"],
        "js": ["editorFilesLoader.js","previewer.js","content.js","shadowRootStyles.js","zdttTemplete.js","zdttErrorPopup.js","PageLoad.js","RequestAPI.js"]
    }]
}